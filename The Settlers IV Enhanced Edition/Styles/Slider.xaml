    <Geometry x:Key="SliderThumbOuterBorderGeometry">M -5,-9.5 A 1 1 0 0 1 -4,-10.5 L 4,-10.5 A 1 1 0 0 1 5,-9.5 L 5,9.5 A 1 1 0 0 1 4,10.5 L -4,10.5 A 1 1 0 0 1 -5,9.5 Z</Geometry>
    <Geometry x:Key="SliderThumbMiddleBorderGeometry">M -4,-9.5 L 4,-9.5 L 4,9.5 L -4,9.5 Z</Geometry>
    <Geometry x:Key="SliderThumbDisabledGeometry">M -5,-10.5 L 5,-10.5 L 5,10.5 L -5,10.5 Z</Geometry>

    <Style x:Key="HorizontalSliderThumbStyle"
           TargetType="{x:Type Thumb}">
        <Setter Property="Focusable"
                Value="false" />
        <Setter Property="OverridesDefaultStyle"
                Value="true" />
        <Setter Property="Height"
                Value="22" />
        <Setter Property="Width"
                Value="11" />
        <Setter Property="Foreground"
                Value="Gray" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Canvas SnapsToDevicePixels="true">
                        <Canvas.RenderTransform>
                            <TranslateTransform X="5.5"
                                                Y="11" />
                        </Canvas.RenderTransform>
                        <Path SnapsToDevicePixels="true"
                              Fill="{StaticResource IndicatorBrush}"
                              Stroke="{StaticResource IndicatorBrush}"
                              x:Name="OuterBorder"
                              Data="{StaticResource SliderThumbOuterBorderGeometry}" />
                        <Path SnapsToDevicePixels="true"
                              Fill="{StaticResource ButtonInnerBackground}"
                              Stroke="{StaticResource ButtonInnerBorder}"
                              x:Name="InnerBorder"
                              Data="{StaticResource SliderThumbMiddleBorderGeometry}" />
                    </Canvas>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter Property="Fill"
                                    TargetName="OuterBorder"
                                    Value="{StaticResource HoverButtonOuterBackground}" />
                            <Setter Property="Stroke"
                                    TargetName="OuterBorder"
                                    Value="{StaticResource HoverButtonOuterBorder}" />
                            <Setter Property="Fill"
                                    TargetName="InnerBorder"
                                    Value="{StaticResource HoverButtonInnerBackground}" />
                            <Setter Property="Stroke"
                                    TargetName="InnerBorder"
                                    Value="{StaticResource HoverButtonInnerBorder}" />
                        </Trigger>
                        <Trigger Property="IsDragging"
                                 Value="true">
                            <Setter Property="Fill"
                                    TargetName="OuterBorder"
                                    Value="{StaticResource PressedButtonOuterBackground}" />
                            <Setter Property="Stroke"
                                    TargetName="OuterBorder"
                                    Value="{StaticResource PressedButtonOuterBorder}" />
                            <Setter Property="Fill"
                                    TargetName="InnerBorder"
                                    Value="{StaticResource PressedButtonInnerBackground}" />
                            <Setter Property="Stroke"
                                    TargetName="InnerBorder"
                                    Value="{StaticResource PressedButtonInnerBorder}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Fill"
                                    TargetName="OuterBorder"
                                    Value="{StaticResource DisabledButtonOuterBackground}" />
                            <Setter Property="Stroke"
                                    TargetName="OuterBorder"
                                    Value="{StaticResource DisabledButtonOuterBorder}" />
                            <Setter Property="Fill"
                                    TargetName="InnerBorder"
                                    Value="{StaticResource DisabledButtonInnerBackground}" />
                            <Setter Property="Stroke"
                                    TargetName="InnerBorder"
                                    Value="{StaticResource DisabledButtonInnerBorder}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

