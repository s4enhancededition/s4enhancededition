    <Page.Background>
        <ImageBrush ImageSource="/Resources/AppStartBackground.png"
                    AlignmentX="Center"
                    AlignmentY="Center"
                    Stretch="Uniform" />
    </Page.Background>
    <Grid>
        <StackPanel VerticalAlignment="Center"
                    Margin="0,0,0,0">
            <TabControl Height="500"
                        Width="664"
                        Margin="176,0,0,0"
                        BorderBrush="{x:Null}"
                        BorderThickness="0">
                <TabControl.Background>
                    <ImageBrush ImageSource="/Resources/AppSettingsBackground.png" />
                </TabControl.Background>
                <TabItem Height="36"
                         Width="110"
                         Margin="0,0,0,-2">
                    <TabItem.Style>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Name="Panel">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected"
                                                     Value="False">
                                                <Setter TargetName="Panel"
                                                        Property="Background">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="/Resources/Button_Setting_Edition1.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsSelected"
                                                     Value="True">
                                                <Setter TargetName="Panel"
                                                        Property="Background">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="/Resources/Button_Setting_Edition3.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver"
                                                               SourceName="Panel"
                                                               Value="True" />
                                                    <Condition Property="IsSelected"
                                                               Value="False" />
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Panel"
                                                        Property="Background">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="/Resources/Button_Setting_Edition2.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabItem.Style>
                    <StackPanel Margin="20,5,5,5">
                        <Label Foreground="White"
                               FontSize="28" Margin="0,0,0,10">Editionsauswahl</Label>
                        <RadioButton>
                            <ComboBoxItem>
                                <StackPanel>
                                    <Label  Content="{x:Static p:Resources.App_Version_EHE}"
                                            Name="App_Version_EHE"
                                            FontSize="14"
                                            Foreground="White"
                                            Margin="-5,-10,0,10" />
                                </StackPanel>
                            </ComboBoxItem>
                        </RadioButton>
                        <RadioButton>
                            <ComboBoxItem>
                                <StackPanel>
                                    <Label  Content="{x:Static p:Resources.App_Version_HE}"
                                            Name="App_Version_HE"
                                            FontSize="14"
                                            Foreground="White"
                                            Margin="-5,-10,0,10" />
                                </StackPanel>
                            </ComboBoxItem>
                        </RadioButton>
                        
                        <RadioButton>
                            <ComboBoxItem>
                                <StackPanel>
                                    <Label  Content="{x:Static p:Resources.App_Version_EGE}"
                                            FontSize="14"
                                            Foreground="White"
                                            Margin="-5,-10,0,10" />
                                </StackPanel>
                            </ComboBoxItem>
                        </RadioButton>
                        <RadioButton>
                            <ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <Label  Content="{x:Static p:Resources.App_Version_GE}"
                                            FontSize="14"
                                            Foreground="White"
                                            Margin="-5,-10,0,10" />
                                </StackPanel>
                            </ComboBoxItem>
                        </RadioButton>
                    </StackPanel>
                </TabItem>
