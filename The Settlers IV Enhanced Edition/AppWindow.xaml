            <StackPanel Grid.Row="3"
                        VerticalAlignment="Center">
                <Label Content="Version: "
                       x:Name="Versiontext"
                       Height="25"
                       Foreground="White"
                       HorizontalAlignment="Center" />
            </StackPanel>
           
