              Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="185" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Image Name="Logo"
                       Source="/Resources/Logo_Enhanced_History_Edition_GER_200px.png"
                       Margin="0,18,0,18" />
            </StackPanel>
            <StackPanel Grid.Row="1"
                        x:Name="ButtonMainPannel"
                        Visibility="Visible">
                <Button Click="Button_PlayClick"
                        Height="63"
                        Width="250"
                        Margin="5">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/Resources/Button_PLAY.png" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Resources/Button_PLAY_hell.png" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
